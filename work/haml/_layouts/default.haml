<!doctype html>
%html
  %head
    %title Matt Huebert | {{ page.title }}
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    %meta{:charset => "utf-8"}
    %meta{:name => "author", :content => "Matthew Huebert"}
    %meta{:name => "description", :content => "{% if page.meta %}{{ page.meta }}{% else %}I am an intellectually curious programmer, writer, designer, photographer, and entrepreneur. I thrive on the unfamiliar, and I am a non-theist. I have lived in Guatemala, Argentina, DR Congo, China, and spent periods of time in Colombia and various regions of Central America.{% endif %}"}
    %meta{:name => 'viewport', :content => 'initial-scale = 1.0'} 
    %link{:rel=>"stylesheet", :href => "/css/reset.css", :type => "text/css"}
    %link{:rel=>"stylesheet", :href => "/css/styles.css", :type => "text/css"}
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}
    %link{:href=>"http://matt.is", :rel=>"alternate", :title=>"Matthew Huebert", :type=>"application/atom+xml"}
    {% include javascripts.html %}
  %body
    .bg
      %img{:src=>"/images/matthew-huebert-bg.jpg"}
    .container
      {% include nav.html %}
      %h1.matt Matt Huebert
      {% if page.hide_title == null %}
      .post-title {{ page.title }}
      {% endif %}
      .content
        {{ content }}
      .bottom-nav
        {% if page.previous %}
        %a.prev{:href=>"{{ page.previous.url }}", :title => "{{ page.previous.title }}"} &larr; Previous
        {% endif %}
        / %a{:href=>"/blog.html"} Index
        {% if page.next %}
        %a.next{:href=>"{{ page.next.url }}", :title => "{{ page.next.title }}"} Next &rarr;
        {% endif %}
      .clear
      {% if page.disqus_hide == null %}
      <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="mhuebert">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
      {% include disqus.html %}
      {% endif %}
      .bottom
        {% if page.disqus_hide != null %}
        {% include facebook.html %}
        {% endif %}
        {% include nav.html %}
    {% include woopra.html %}
    
