\---
title: Blog
layout: default
disqus_hide: true
hide_title: true
\---
.recent-posts{:style=>"width:700px;"}
  
  %ul.posts
    {% for post in site.posts limit:30 %}
    {% if post.hide_from_nav == null %}
    %li
      .date {{ post.date | date_to_string }}
      %a{:href=>"{{ post.url }}"} {{ post.title }}
    {% endif %}
    {% endfor %}
